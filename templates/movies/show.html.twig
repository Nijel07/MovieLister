{% extends "./base.html.twig" %}

{% block body %}
    <div class="max-w-2xl mx-auto px-4">
        <h2 class="text-2xl font-bold mb-4">{{ movie.title }}</h2>

        <div class="flex justify-center mb-6">
            <img
                    src="{{ movie.imagePath }}"
                    alt="{{ movie.title }} Poster"
                    class="rounded-xl shadow-xl w-full max-w-lg"
            >
        </div>

        <div class="text-lg text-gray-700 leading-relaxed mb-6">
            <p>{{ movie.description }}</p>
        </div>

        <div class="flex justify-center">
            <a href="{{ path('edit_movie', {'id': movie.id}) }}" class="bg-green-500 text-white font-bold py-2 px-4 rounded hover:bg-green-600 mr-4">Edit Movie</a>
            <a href="{{ path('delete_movie', {'id': movie.id}) }}" class="bg-red-500 text-white font-bold py-2 px-4 rounded hover:bg-red-600">Delete Movie</a>
        </div>
    </div>
{% endblock %}