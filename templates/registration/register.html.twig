{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="flex justify-center items-center h-screen bg-gray-200">
        <div class="bg-white shadow-md rounded-lg p-6 w-full max-w-md">
            <h1 class="text-3xl font-bold mb-6 text-center">Register</h1>

            {{ form_start(form, {'attr': {'class': 'form'}}) }}

            <div class="mb-4">
                {{ form_label(form.email, 'Email', {'attr': {'class': 'block text-sm font-semibold mb-2'}}) }}
                <div class="border border-gray-300 rounded p-2">
                    {{ form_widget(form.email, {'attr': {'class': 'form-input w-full'}}) }}
                </div>
            </div>

            <div class="mb-4">
                {{ form_label(form.password, 'Password', {'attr': {'class': 'block text-sm font-semibold mb-2'}}) }}
                <div class="border border-gray-300 rounded p-2">
                    {{ form_widget(form.password, {'attr': {'class': 'form-input w-full'}}) }}
                </div>
            </div>

            <div class="mb-4">
                {{ form_label(form.name, 'Name', {'attr': {'class': 'block text-sm font-semibold mb-2'}}) }}
                <div class="border border-gray-300 rounded p-2">
                    {{ form_widget(form.name, {'attr': {'class': 'form-input w-full'}}) }}
                </div>
            </div>

            <div class="mb-4">
                {{ form_label(form.lastname, 'Last Name', {'attr': {'class': 'block text-sm font-semibold mb-2'}}) }}
                <div class="border border-gray-300 rounded p-2">
                    {{ form_widget(form.lastname, {'attr': {'class': 'form-input w-full'}}) }}
                </div>
            </div>

            <div class="mb-6">
                {{ form_label(form.telno, 'Telephone', {'attr': {'class': 'block text-sm font-semibold mb-2'}}) }}
                <div class="border border-gray-300 rounded p-2">
                    {{ form_widget(form.telno, {'attr': {'class': 'form-input w-full'}}) }}
                </div>
            </div>

            <div class="flex justify-center">
                <button type="submit" class="bg-blue-500 hover:bg-blue-700 text-white font-semibold py-2 px-4 rounded w-full">
                    Register
                </button>
            </div>

            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
